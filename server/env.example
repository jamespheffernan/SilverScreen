# Database
POSTGRES_URL=postgresql://user:pass@localhost:5432/silverscreen

# Redis (optional - for BullMQ job queue)
# If not provided, purchase jobs will be processed synchronously
# REDIS_URL=redis://localhost:6379

# Stripe (test mode)
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Scraping configuration
TARGET_CHAIN=CHAIN_X
TARGET_CITY=NYC
SCRAPER_USER_AGENT=SilverScreen/1.0 (+https://your-site.com/bot)

# Demo mode (fixtures only, no live scraping)
DEMO_MODE=true

# Scrape source (fixtures or live)
SCRAPE_SOURCE=fixtures

# CORS configuration (comma-separated origins for production)
# ALLOWED_ORIGINS=https://your-netlify-site.netlify.app,https://your-domain.com

# Logging
LOG_LEVEL=info

# Server
PORT=3001
